<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/up_monde"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.9"
        android:background="#06C20C"
        tools:visibility="invisible" />

    <ImageView
        android:id="@+id/up_pays"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.9"
        android:background="#FFE403"
        tools:visibility="invisible" />

    <ImageView
        android:id="@+id/up_mechant"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.9"
        android:background="#FF1000"
        tools:visibility="invisible" />

    <ImageView
        android:id="@+id/up_gentil"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.9"
        android:background="#008DFF"
        tools:visibility="invisible" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.8"
        android:background="@drawable/testbg2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:background="@drawable/ressource" />

            <TextView
                android:id="@+id/up_level"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:text="1"
                android:textColor="@android:color/background_light"
                android:textSize="140sp"
                android:textStyle="bold|italic"
                android:typeface="serif" />

            <TextView
                android:id="@+id/up_reput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:text="Réputation mondiale"
                android:textColor="@android:color/background_light"
                android:textStyle="bold|italic" />
        </FrameLayout>

        <TextView
            android:id="@+id/up_grade"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/fond"
            android:gravity="center"
            android:text="Ninja supérieur"
            android:textColor="@android:color/background_light"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="serif" />

        <TextView
            android:id="@+id/up_desc"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="@drawable/testbg"
            android:padding="20dp"
            android:text="Votre réputation au sein du pays des ninjas à désormais atteint un cap. Vous êtes désormais considéré comme un ninja supérieur de ce pays."
            android:textAlignment="center"
            android:textColor="@android:color/background_light" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="3"
            android:background="@drawable/testbg"
            android:padding="15dp">

            <LinearLayout
                android:id="@+id/up_recomp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#33202020"
                android:orientation="vertical"
                android:padding="5dp" />
        </ScrollView>

        <TextView
            android:id="@+id/up_bouton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="120dp"
            android:layout_marginEnd="120dp"
            android:layout_weight="1"
            android:background="@drawable/bouton2"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="Ok"
            android:textColor="@android:color/background_light"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>
</FrameLayout>