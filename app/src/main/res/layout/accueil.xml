<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/accueil_mainlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TestActivityFragment">

    <LinearLayout
        android:id="@+id/accueil_linear0"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/accueil_topecran"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/fondtop"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingBottom="4dp">

            <FrameLayout
                android:id="@+id/accueil_fondperso"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/testbg">

                <ImageView
                    android:id="@+id/accueil_perso"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="120dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="120dp"
                    android:scaleType="centerCrop"
                    android:scaleX="2"
                    android:scaleY="2"
                    android:src="@drawable/bdd_perso_okori" />

            </FrameLayout>

            <TextView
                android:id="@+id/accueil_pseudo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="@android:color/background_light"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/accueil_nbressources"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:background="@drawable/testbg"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/accueil_imgressources"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ressource" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/accueil_barres"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/accueil_b0"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/accueil_b00"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@drawable/progressv" />

                <ImageView
                    android:id="@+id/accueil_b01"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:alpha="0.5"
                    android:scaleType="fitXY"
                    android:src="@drawable/progressv" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/accueil_b1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/accueil_b10"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@drawable/progressg" />

                <ImageView
                    android:id="@+id/accueil_b11"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:alpha="0.5"
                    android:scaleType="fitXY"
                    android:src="@drawable/progressg" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/accueil_b2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/accueil_b20"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@drawable/progressg" />

                <ImageView
                    android:id="@+id/accueil_b21"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:alpha="0.5"
                    android:scaleType="fitXY"
                    android:src="@drawable/progressg" />
            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/accueil_frame0"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <FrameLayout
                android:id="@+id/accueil_fragm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp">

            </FrameLayout>

            <FrameLayout
                android:id="@+id/accueil_muraille"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/accueil_murailleder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:scaleType="fitEnd"
                    android:src="@drawable/muraille2"
                    android:translationY="-5dp" />

                <FrameLayout
                    android:id="@+id/accueil_personnages"
                    android:layout_width="match_parent"
                    android:layout_height="105dp"
                    android:layout_gravity="bottom"
                    android:translationY="10dp" />

                <ImageView
                    android:id="@+id/accueil_murailledev"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:scaleType="fitEnd"
                    android:scaleX="1.1"
                    android:src="@drawable/muraille"
                    android:translationX="10dp"
                    android:translationY="20dp" />

            </FrameLayout>

        </FrameLayout>

        <LinearLayout
            android:id="@+id/accueil_botecran"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/fondbas"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/accueil_accueil"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="12dp"
                android:paddingBottom="5dp"
                android:src="@drawable/accueil" />

            <ImageView
                android:id="@+id/accueil_equipe"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:src="@drawable/personnages" />

            <ImageView
                android:id="@+id/accueil_stats"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="15dp"
                android:paddingBottom="8dp"
                android:src="@drawable/stats" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>